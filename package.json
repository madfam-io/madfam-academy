{
  "name": "madfam-academy",
  "version": "0.1.0",
  "description": "Educational marketplace platform with CONOCER certification support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "pre-commit": "pre-commit run --all-files",
    "security:scan": "npm audit && detect-secrets scan --baseline .secrets.baseline"
  },
  "keywords": [
    "education",
    "marketplace",
    "certification",
    "CONOCER",
    "multi-tenant"
  ],
  "author": "MADFAM Academy Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "pdf-lib": "^1.17.1",
    "express": "^4.18.2",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}